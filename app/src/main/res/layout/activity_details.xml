<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.myapplication2.app.DetailsActivity"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:id="@+id/linearLayout">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 dose remaining for today"
                android:gravity="center_horizontal"
                android:id="@+id/textView21"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textSize="32sp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/abc_primary_text_material_dark"
                android:text="Next dose: 5:25 PM. March 26. 2015"
                android:id="@+id/textView22"
                android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout2">

            <ImageView
                    android:layout_width="219dp"
                    android:layout_height="223dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/vicodin"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="50dp"/>

            <ImageView
                    android:layout_width="320dp"
                    android:layout_height="324dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/circle"
                    android:layout_gravity="center_horizontal|bottom"/>
        </FrameLayout>

        <include layout="@layout/table_details"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"/>
    </LinearLayout>

    <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/expandableListView"
            android:layout_weight="1.81"
            android:backgroundTint="@color/material_blue_grey_950"
            android:backgroundTintMode="src_over"/>
</LinearLayout>
